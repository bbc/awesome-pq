{
  "env": {
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "script",
  },
  "extends": ["prettier", "prettier/react"],
  "plugins": ["prettier"],
  "rules": {
    "import/no-extraneous-dependencies": [0],
    "import/prefer-default-export": [0],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "printWidth": 80,
        "tabWidth": 2,
        "trailingComma": "es5"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js"]
      }
    }
  }
}
